{
    "name": "nikolaposa/notify",
    "description": "Abstractions for modeling and implementing application notifications functionality",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "notify",
        "notification",
        "email",
        "sms"
    ],
    "authors": [
        {
            "name": "Nikola Po≈°a",
            "email": "posa.nikola@gmail.com",
            "homepage": "http://www.nikolaposa.in.rs"
        }
    ],
    "require": {
        "php": "^7.0",
        "guzzlehttp/guzzle": "^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7 || ^6.0",
        "friendsofphp/php-cs-fixer": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Notify\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Notify\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --colors=always",
        "cs-fix": "php-cs-fixer fix --config=.php_cs",
        "cs-check": "php-cs-fixer fix --config=.php_cs -v --diff --dry-run"
    }
}
